  # For testing the kitchen sink app
  # Twitter bootstrap
  gem 'volt-bootstrap'
  gem 'byebug'

  # Simple theme for bootstrap, remove to theme yourself.
  gem 'volt-bootstrap-jumbotron-theme'

  # For testing
  gem 'volt-fields'

  # For testing
  gem 'volt-user-templates'

